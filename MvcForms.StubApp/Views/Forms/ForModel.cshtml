@using MvcForms.Forms
@using MvcForms.StubApp.Models.Forms
@using MvcForms.StubApp.Views
@inherits StubPage<ForModelView>
@model ForModelView
@{
    SetLayout("ForModel");
}
<h3>ForModel</h3>

@if (Model != null && Model.Post != null)
{
    <p>BasicValue=@Model.Post.BasicValue</p>
}

@using (Html.BeginForm())
{
    <div>@Html.ForModel(Model.Post).TextBoxFor(m => m.BasicValue)</div>
    <div data-id="validationOutput">{validation=@Html.ForModel(Model.Post).ValidationMessageFor(m => m.BasicValue)}</div>

    <input type="submit" class="btn btn-default" />
}
