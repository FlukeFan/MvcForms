@using MvcForms.StubApp.Utility
@using MvcForms.StubApp.Views
@inherits StubPage<object>
@{
    SetLayout("Bootstrap Horizantal Example");
}

@switch (Context.GetCurrentCssFramework())
{
    case CssFramework.Bootstrap3:
        <h3>Bootstrap Horizontal Example</h3>

        <span class="visible-xs">Device=xs (x-tra small)</span>
        <span class="visible-sm">Device=sm (small)</span>
        <span class="visible-md">Device=md (medium)</span>
        <span class="visible-lg">Device=lg (large)</span>

        <form class="form-horizontal">

            <br />

            <div class="form-group has-error">
                <label for="input1" class="control-label col-xs-12 col-sm-3 col-lg-2">Input 1</label>
                <div class="col-xs-12 col-sm-9 col-lg-6">
                    <input type="text" class="form-control" id="input1" placeholder="Input 1">
                </div>
                <div class="col-xs-12 col-sm-offset-3 col-sm-9 col-lg-offset-0 col-lg-4">
                    <p class="help-block">Input 1 has an invalid value</p>
                </div>
            </div>

            <div class="form-group">
                <label for="input2" class="control-label col-xs-12 col-sm-3 col-lg-2">Input 2</label>
                <div class="col-xs-12 col-sm-9 col-lg-6">
                    <input type="text" class="form-control" id="input2" placeholder="Input 2">
                </div>
                <div class="col-xs-12 col-sm-offset-3 col-sm-9 col-lg-offset-0 col-lg-4">
                    <p class="help-block"></p>
                </div>
            </div>

            <div class="form-group">
                <label for="input3" class="control-label col-xs-12 col-sm-3 col-lg-2">Input 3</label>
                <div class="col-xs-12 col-sm-9 col-lg-6">
                    <input type="text" class="form-control" id="input3" placeholder="Input 3">
                </div>
                <div class="col-xs-12 col-sm-offset-3 col-sm-9 col-lg-offset-0 col-lg-4">
                    <p class="help-block"></p>
                </div>
            </div>

        </form>
        break;

    case CssFramework.Bootstrap4:
        <h3>Bootstrap Horizontal Example</h3>

        <span class="d-block d-sm-none">Device=xs (x-tra small)</span>
        <span class="d-none d-sm-block d-md-none">Device=sm (small)</span>
        <span class="d-none d-md-block d-lg-none">Device=md (medium)</span>
        <span class="d-none d-lg-block d-xl-none">Device=lg(large)</span>
        <span class="d-none d-xl-block">Device=xl (x-tra large)</span>

        <form class="form-horizontal">

            <br />

            <div class="form-group row is-invalid">
                <label for="input1" class="col-form-label col-xs-12 col-sm-3 col-lg-2">Input 1</label>
                <div class="col-xs-12 col-sm-9 col-lg-6">
                    <input type="text" class="form-control is-invalid" id="input1" placeholder="Input 1">
                    <small class="help-block">This shows an invalid entry</small>
                </div>
                <div class="col-xs-12 offset-sm-3 col-sm-9 offset-lg-0 col-lg-4">
                    <span class="d-block invalid-feedback">Input 1 has an invalid value</span>
                </div>
            </div>

            <div class="form-group row">
                <label for="input2" class="col-form-label col-xs-12 col-sm-3 col-lg-2">Input 2</label>
                <div class="col-xs-12 col-sm-9 col-lg-6">
                    <input type="text" class="form-control" id="input2" placeholder="Input 2">
                </div>
                <div class="col-xs-12 offset-sm-3 col-sm-9 offset-lg-0 col-lg-4">
                    <p class="help-block"></p>
                </div>
            </div>

            <div class="form-group row">
                <label for="input3" class="col-form-label col-xs-12 col-sm-3 col-lg-2">Input 3</label>
                <div class="col-xs-12 col-sm-9 col-lg-6">
                    <input type="text" class="form-control" id="input3" placeholder="Input 3">
                </div>
                <div class="col-xs-12 offset-sm-3 col-sm-9 offset-lg-0 col-lg-4">
                    <p class="help-block"></p>
                </div>
            </div>

        </form>
        break;

    default:
        throw new Exception($"Unhandled framework: {Context.GetCurrentCssFramework()}");
}
