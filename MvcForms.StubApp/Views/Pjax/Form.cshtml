@using MvcForms.Forms
@using  MvcForms.StubApp.Views
@inherits PjaxPage<object>
@{
    SetLayout("Form:" + Model);
}
<form method="post">
    @if (Context.Request.Method == "POST")
    {
        <div>button=@Context.Request.Form["button"]</div>
    }

    <span>enter 'Success' to complete form: </span>
    <input type="text" name="postedValue" value="@Model" />
    @Html.ButtonSubmit("go").Name("button").Value("go")
    @Html.ButtonSubmit("redirect").Name("redirect").Value("redirect").NoPjax()
</form>