@inherits PjaxPage<MvcForms.StubApp.Models.Examples.InputsModel>
@{
    SetLayout("Inputs");
}

<h3>Inputs</h3>

<style>
    p { margin-top: 20px; }
    form {
        background: #eee;
        max-width: 800px;
        padding: 15px;
    }
</style>

@using (var form = Html.FormFor(Model.PostModel).Begin())
{

    @form.Html.ErrorSummary()

    <h3>InputText</h3>
    <div>
        @form.Html.InputText(f => f.StringInput1)
    </div>

    <h3>LabelledInputText</h3>
    @form.Html.LabelledInputText("StringInput2", f => f.StringInput2)

    <h3>LabelledInputNumber</h3>
    @form.Html.LabelledInputNumber("Int", f => f.Int)
    @form.Html.LabelledInputNumber("NullableInt", f => f.NullableInt)
    @form.Html.LabelledInputNumber("StringInput1", f => f.StringInput1)

    using (form.Html.FormButtons())
    {
        @form.Html.ButtonSubmit("Submit").Style(MvcForms.Styles.Default.DefaultButton.Primary)
        @form.Html.ButtonSubmit("Another Submit")

        if (Request.IsPjaxModal())
        {
            @Html.LinkButtonCancelModal()
        }
        else
        {
            @Html.LinkButtonModal("Modal", ExamplesActions.Inputs())
        }
    }
}
